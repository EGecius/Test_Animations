<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <Button
            android:id="@+id/spin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="spin"/>

        <Button
            android:id="@+id/shared_element_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/spin_btn"
            android:text="shared element"/>

        <Button
            android:id="@+id/reveal_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shared_element_btn"
            android:text="Reveal"/>

        <RelativeLayout
            android:id="@+id/circles_container"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@color/green_light"
            android:padding="16dp">

            <View
                android:id="@+id/blue_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_turquoise_bg"/>

            <View
                android:id="@+id/green_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_green_bg"/>

            <View
                android:id="@+id/orange_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_orange_bg"/>

            <View
                android:id="@+id/purple_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_purple_bg"/>

        </RelativeLayout>


        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_red_bg"/>

        <ImageView
            android:id="@+id/itv_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:src="@drawable/logo_itv"/>

    </RelativeLayout>

</LinearLayout>
