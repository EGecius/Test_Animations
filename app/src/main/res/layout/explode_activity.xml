<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:ignore="RtlHardcoded">

    <Button
        android:id="@+id/to_child_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To child Activity"/>

    <RelativeLayout
        android:id="@+id/circles_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:background="@color/green_light">

        <View
            android:id="@+id/blue_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_turquoise_bg"/>

        <View
            android:id="@+id/green_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_green_bg"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/orange_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_orange_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <View
            android:id="@+id/purple_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_purple_bg"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>